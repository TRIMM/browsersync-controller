{% extends 'base.html.twig' %}

{% form_theme edit_form 'form/fields.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col s12 offset-m2 m8">
            {{ form_start(edit_form) }}
            <div class="card">
                <div class="card-image">
                    <img src="{{ asset('uploads/avatar/' ~ website.avatar) }}">
                    <span class="card-title">{{ website.name }}</span>
                </div>
                <div class="card-content">

                        {{ form_row(edit_form.name) }}
                        {{ form_row(edit_form.url) }}
                        {{ form_row(edit_form.avatar) }}

                </div>
                <div class="card-action">
                    <a href="{{ path('website_delete', { 'id': website.id }) }}" class="waves-effect waves-light btn red" type="submit"><i class="material-icons left">delete</i>Delete</a>
                    <button class="waves-effect waves-light btn" type="submit"><i class="material-icons left">save</i>Save</button>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('website_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
