{% extends 'base.html.twig' %}

{% form_theme form 'form/fields.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col s12 offset-m2 m8">
            {{ form_start(form) }}
            <div class="card">
                <div class="card-image">
                    <img src="{{ asset('img/new_website.jpg') }}" style="max-width: 100%;">
                    <span class="card-title">New website</span>
                </div>
                <div class="card-content">

                    {{ form_row(form.name) }}
                    {{ form_row(form.url) }}
                    {{ form_row(form.avatar) }}

                </div>
                <div class="card-action">
                    <button class="waves-effect waves-light btn" type="submit"><i class="material-icons left">save</i>Save</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('website_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
