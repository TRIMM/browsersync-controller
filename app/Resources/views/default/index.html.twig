{% extends 'base.html.twig' %}

{% form_theme form 'form/fields.html.twig' %}

{% block body %}
    <p class="flow-text">I am a very simple card. I am good at containing small bits of information. I am convenient because I require little markup to use effectively.</p>


    {{ form_start(form) }}
    <div class="row">
        <div class="input-field col s12 m8">
            {{ form_label(form.site) }}
            {{ form_errors(form.site) }}
            {{ form_widget(form.site) }}
        </div>
        <div class="input-field col s12 m4">
            {{ form_label(form.save) }}
            {{ form_widget(form.save) }}
        </div>
    </div>
    {{ form_end(form) }}

    <div class="row">
        {% for website in websites %}
        <div class="col s6 m3 url-select" data-url="{{ website.url }}">
            <div class="card">
                <div class="card-image">
                    <img src="{{ asset('uploads/avatar/' ~ website.avatar) }}">
                    <span class="card-title">{{ website.name }}</span>
                </div>
                <div class="card-action">
                    <a href="#">Select</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}