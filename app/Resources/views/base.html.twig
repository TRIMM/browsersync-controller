<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body style="min-height: 100vh; display: flex; flex-direction: column; background: url({{ asset('img/bg.jpg') }});">
        <nav style="height: 100px; line-height: 100px; background-color: white; display: flex; align-items: center">#}
            <div class="container" style="height: 60px;">
                <a href="{{ path('homepage') }}"><img src="{{ asset('img/logo.svg') }}" class="left" style="max-height: 100%"/></a>
            </div>

        </nav>
        <div style="height: 60px; background: transparent;"></div>

        <div style="flex: 1 1 100%; display: flex; align-items: center; justify-content: center; background-color: #f5f5f5">
            <div class="container">
                {% block body %}{% endblock %}
            </div>
        </div>

        <div class="fixed-action-btn">
            <a class="btn-floating btn-large red">
                <i class="large material-icons">mode_edit</i>
            </a>
            <ul>
                <li><a href="{{ path('homepage') }}" class="btn-floating red"><i class="material-icons">settings_cell</i></a></li>
                <li><a href="{{ path('website_new') }}" class="btn-floating green"><i class="material-icons">add</i></a></li>
                <li><a href="{{ path('website_index') }}" class="btn-floating blue"><i class="material-icons">view_list</i></a></li>
            </ul>
        </div>

        <div style="height: 60px;"></div>


        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
        <script src="{{ asset('js/main.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
